{
    "env": {
        "browser": true,
        "es2021": true
    },
   
    "extends": "xo",
    "overrides": [
        {
            "extends": [
                "xo-typescript"
            ],
            "files": [
                "*.ts",
                "*.tsx"
            ]
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        //Ongelma liittyy jotenkin näihin kahteen riviin
        /* 
        Jostain syystä eslint ei löydä tsconfig.js tiedostoa
        vaikka polku on määritelty tässä. Ongelma myös esiintyy
        vain angularin kanssa joten pakko liittyä johonkin angularin
        määrityksiin.
        */
        "project": "angular-pwa/tsconfig.json"
        // "tsconfigRootDir": "__dirname"
    },
    "rules": {
        "new-cap": 0
    }
}
